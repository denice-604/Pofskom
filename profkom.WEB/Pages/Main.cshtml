    ViewData["Title"] = "Меню выбора";
}


<div class="container">
    <div class="card">
        <div class="card-header">
            Меню
        </div>
        <div class="card-body" style="display:flex; flex-direction:column; gap: 20px;">
            <form method="post">
                @if (Session.User.Access == 0)
                {
                    <div class="form-group">
                        <button type="submit" name="action" value="UserList" class="btn btn-primary">Список пользователей</button>
                    </div>
                                        <div class="form-group">
                        <button type="submit" name="action" value="DepartList" class="btn btn-primary">Список цехов</button>
                    </div>
                                        <div class="form-group">
                        <button type="submit" name="action" value="PostsList" class="btn btn-primary">Список Должностей</button>
                    </div>
                }
                <div class="form-group">
                    <button type="submit" name="action" value="action1" class="btn btn-primary">Отобразить</button>
                </div>
                <div class="form-group">
                    <button type="submit" name="action" value="action2" class="btn btn-primary">Выгрузить</button>
                </div>
                <div class="form-group">
                    <button type="submit" name="action" value="action3" class="btn btn-primary">Добавить</button>
                </div>
            </form>
        </div>
    </div>
</div>
